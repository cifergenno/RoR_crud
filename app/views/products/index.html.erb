
<div class="header"> Product list </div>

<table class="table table-bordered">
  <thead>
    <th>Name</th>
    <th class="table_desc" >Description</th>
    <th>Price</th>
    <th class="table_option"></th>
  </thead>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td>$ <%= number_with_precision(product.price, :precision => 2, :delimiter => ',')  %></td>

      
      <td>
        <%= link_to "View", view_product_path(product) %>
        <%= link_to "Edit", edit_product_path(product) %>
        <%= link_to "Delete", product, method: :delete, data: { confirm: "Are you sure you want to delete this product?"} %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'Create New', new_product_path, class: 'create_new btn btn-primary' %>


