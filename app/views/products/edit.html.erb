<%= form_for :@product, :url => product_path, :html => { :method => :put, :class => 'product_view'} do |f| %>

  <div class="form-outline mb-4">
    <label class="form-label" for="product_name">Name</label>
    <%= text_field_tag :name,  @product["name"], :class => "form-control"  %>
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="product_name">Description</label>
    <%= text_area_tag :description,  @product["description"], :class => "form-control"  %>
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="product_name">Price</label>
    <%= number_field_tag :price,  @product["price"], :class => "form-control"  %>
  </div>
  <div class="submit_wrapper">
    <%= f.submit "Update", :class=>"btn btn-primary btn-block mb-4"%>
    <%= link_to "Cancel", products_path, :class => "btn btn-secondary btn-block mb-4"  %>
  </div>
<% end %>
